#!/bin/zsh
echo "git init"
echo "touch .gitignore"
echo ""
echo "git add ."
echo 'git commit -m "コメント" #ローカルリポジトリにコミット'
echo "git push origin <ブランチ> #GitHub反映"
echo ""
echo "git restore <ファイル> #ファイルの修正を戻す"
echo "git restore --staged [or -S] <ファイル> #git addでstagingしたものを戻す"
echo "git restore --source [or -s] <ファイルID> <ファイル> #ファイルをコミット時点に戻す"
echo ""
echo "git revert <コミットID> #コミットを取り消す(消すための新しいコミット)"
echo "git reset --soft <コミットID> #コミットを取り消す"
echo "git reset [--mixed] <コミットID> #コミットとステージを取り消す"
echo "git reset --hard <コミットID> #コミットとステージと作業ディレクトリを取り消す"
echo "一つ前のコミットは<コミットID>ではなく、HEAD^でも可能"
echo "^を複数繋げることでn個前のコミットを取り消すことが可能[HEAD~n]でも可能"
echo ""
echo "git status #ファイル状況確認"
echo "git log"
echo "git branch #ブランチ一覧"
echo "git branch <ブランチ> #ブランチ作成"
echo "git switch <ブランチ> #ブランチ切り替え"
echo "git switch -c <ブランチ> #ブランチ作成して切り替え"
echo "git branch -d <ブランチ> #ブランチ削除"
echo "git merge <ブランチ> #別のブランチを現在のブランチに反映"
echo ""
echo "git tag  #タグ一覧"
echo 'git tag -a <タグ> -m "コメント" #タグ作成'
echo "git tag -d <タグ>  #タグ削除 (push前)"
echo "git push origin <タグ> #GitHub反映"
