#!/bin/zsh
echo -e "\e[42m** ショートカット **\e[m"
echo "ctrl + f                    ... カーソル一文字前"
echo "ctrl + e                    ... カーソル一文字後"
echo "ctrl + a                    ... カーソル行頭"
echo "ctrl + e                    ... カーソル行末"
echo ""
echo -e "\e[42m** フィルタ **\e[m"
echo "標準入力 -> フィルタ -> 標準出力"
echo "head                        ... 先頭10行"
echo "tail                        ... 末尾10行"
echo "cat [-n]                    ... 入力をそのまま"
echo "less [-n]                   ... 入力をそのまま(スクロール表示)"
echo "                                / で文字検索可能" 
echo "wc                          ... 行数 単語数 バイト数"
echo "sort                        ... 辞書順ソート"
echo "sort -n                     ... 整数順ソート"
echo "uniq                        ... 重複行削除"
echo "tr <置換前> <置換後>        ... 文字(一文字)置換"
echo "tr -d <削除文字>            ... 文字列削除"
echo "diff [-u] <元ファイル> <先ファイル>      ... 差分"
echo "grep '<検索文字>' <パス>    ... 検索例) re参照"
echo ""
echo -e "\e[42m** リモートアクセス **\e[m"
echo "ssh ユーザ名@IPアドレス"
echo "scp ファイル ユーザ名@IPアドレス:ディレクトリパス"
echo "scp -r フォルダ ユーザ名@IPアドレス :ディレクトリパス"
echo ""
echo -e "\e[42m** ファイル権限 **\e[m"
echo "chmod XXX [-R] <ファイル>    ... 権限変更"
echo "		4 r 読み取り / 2 w 書き込み / 1 x 実行"
echo "	 	X: 所有者権限  X: グループ権限  X: 他ユーザ権限"
echo "		-R 再帰的にフォルダ内の全てのファイル・フォルダに適用"
echo "chown [-R] <ユーザ名> <ファイル>          ... ファイル所有者変更"
echo "chgrp [-R] <グループ名> <ファイル>        ... ファイルグループ変更"
echo ""
echo -e "\e[42m** その他 **\e[m"
echo "source                       ... 設定ファイル読み込み"
echo "pwd                          ... カレントディレクトリ表示"
echo "which コマンド名             ... コマンドパス"
echo "date                         ... 日付"
echo "history                      ... コマンド履歴"
echo "clear                        ... 画面クリア"
echo "df                           ... ディスク容量"
